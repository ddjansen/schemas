{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "person.json",
    "type": "object",
    "allOf": [
        {
            "$ref": "#/definitions/BusinessPartner"
        },
        {
            "properties": {
                "isPostAdresOnjuist": {
                    "type": "string",
                    "default": "NEE"
                },
                "roepnaam": {
                    "type": "string",
                    "maxLength": 100
                },
                "voornamen": {
                    "type": "string",
                    "maxLength": 200
                },
                "aanhefAfkorting": {
                    "type": "string",
                    "maxLength": 10
                },
                "aanhefVolledig": {
                    "type": "string",
                    "maxLength": 10
                },
                "volledigeNaam": {
                    "type": "string",
                    "maxLength": 200
                },
                "achternaam": {
                    "type": "string",
                    "maxLength": 200
                },
                "geslachtsnaam": {
                    "type": "string",
                    "maxLength": 200
                },
                "voorletters": {
                    "type": "string",
                    "maxLength": 20
                },
                "geslacht": {
                    "type": "string"
                },
                "titelAchterNaam": {
                    "type": "string"
                },
                "titelVoorNaam": {
                    "type": "string"
                },
                "voorvoegsels": {
                    "type": "string"
                },
                "persoonIdCRM": {
                    "type": "string"
                },
                "persoonIdCWR": {
                    "type": "integer"
                },
                "contactpunt": {
                    "type": "object",
                    "properties": {
                        "adres": {
                            "$ref": "#/definitions/Adres"
                        },
                        "email": {
                            "$ref": "#/definitions/Email"
                        },
                        "telefoon": {
                            "$ref": "#/definitions/Telefoon"
                        }
                    }
                }
            }
        }
    ],
    "definitions": {
        "BusinessModelObject": {
            "id": "#BusinessModelObject",
            "description": "Version: 0.1",
            "type": "object",
            "properties": {
                "apgId": {
                    "description": "Unique identifier of the Object",
                    "type": "integer"
                },
                "RegistratieDatum": {
                    "type": "string"
                },
                "vervallenDatum": {
                    "type": "string"
                },
                "mogId": {
                    "description": "Unique identifier of the different funds registered within APG",
                    "type": "string"
                },
                "rootObjectType": {
                    "description": "Indication of the BOT type of the object. Example: Overeenkomst, Opdrachtgever, etc",
                    "type": "string"
                }
            }
        },
        "RolePlayer": {
            "id": "#RolePlayer",
            "type": "object",
            "allOf": [
                {
                    "$ref": "#/definitions/BusinessModelObject"
                },
                {
                    "properties": {
                        "rolOmschrijving": {
                            "type": "string"
                        },
                        "typeOmschrijving": {
                            "type": "string"
                        }
                    }
                }
            ]
        },
        "BusinessPartner": {
            "id": "#BusinessPartner",
            "type": "object",
            "allOf": [
                {
                    "$ref": "#/definitions/RolePlayer"
                },
                {
                    "properties": {
                        "taalCode": {
                            "type": "string",
                            "maxLength": 2
                        }
                    }
                }
            ]
        },
        "Persoon": {
            "id": "#Persoon",
            "type": "object"
        },
        "Telefoon": {
            "id": "#Telefoon",
            "type": "object",
            "properties": {
                "extensie": {
                    "type": "string"
                },
                "mobiel": {
                    "type": "string"
                },
                "telefoonnummer": {
                    "type": "string"
                },
                "landcode": {
                    "type": "string"
                }
            }
        },
        "Email": {
            "id": "#Email",
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "mailType": {
                    "type": "string",
                    "enum": [
                        "Business",
                        "Correspondentie",
                        "Factuur"
                    ]
                },
                "taalcodeEmail": {
                    "type": "string"
                }
            }
        },
        "Adres": {
            "id": "#Adres",
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "$ref": "#/definitions/AdresItem"
            }
        },
        "AdresItem": {
            "id": "#AdresItem",
            "type": "object",
            "properties": {
                "gelijkAanAdresType": {
                    "description": "If value true, then correspondentieadres-values in CRM wil be the values from vestigingsadres, otherwise not",
                    "type": "boolean"
                },
                "gemeente": {
                    "type": "string"
                },
                "huisletter": {
                    "type": "string"
                },
                "huisnummerToevoeging": {
                    "type": "string"
                },
                "locatieOmschrijving": {
                    "type": "string"
                },
                "plaatsnaam": {
                    "type": "string"
                },
                "postbus": {
                    "type": "integer"
                },
                "provincie": {
                    "type": "string"
                },
                "regio": {
                    "type": "string"
                },
                "straatnaam": {
                    "type": "string"
                },
                "adresRegel1": {
                    "type": "string"
                },
                "adresRegel2": {
                    "type": "string"
                },
                "adresRegel3": {
                    "type": "string"
                },
                "adresRegel4": {
                    "type": "string"
                },
                "adresType": {
                    "type": "string",
                    "enum": [
                        "woonadres",
                        "correspondentieadres",
                        "adres financiÃ«le administratie",
                        "vestigingsadres",
                        "bezoekadres",
                        "afleveradres"
                    ]
                },
                "landcode": {
                    "type": "string"
                },
                "huisnummer": {
                    "type": "integer"
                },
                "postcode": {
                    "type": "string"
                },
                "heeftPostbus": {
                    "type": "string",
                    "enum": [
                        "JA",
                        "NEE"
                    ]
                },
                "afwijkendeTenaamstelling": {
                    "type": "string"
                }
            },
            "required": [
                "adresType"
            ]
        }
    }
}